<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_channel"
        android:layout_width="@dimen/main_activity_edit_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_activity_edit_margin_top"
        android:autofillHints=""
        android:digits="@string/legal_characters"
        android:gravity="center"
        android:hint="@string/room_name_edit_hint"
        android:inputType="text"
        android:lines="1" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:onClick="onStartBroadcastClick"
        android:text="@string/enter_room_btn" />
</LinearLayout>
